<article class="post">
  <div class="post-title">
    <h3>{{title}}</h3>
    <p>Posted by {{user.username}} on {{created_at}}</p>
  </div>
  <div class="post-content">
    <p>{{content}}</p>
  </div>
</article>

<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>