<form class="login-form card">
  <div class="form-title card-header">
    <h2>Login</h2>
  </div>
  <div class="card-body">
    <label for="username-login">username:</label>
    <input type="text" class="form-input" id="username-login" />

    <label for="password-login">password:</label>
    <input type="password" class="form-input" id="password-login" />

    <button type="submit" class="btn">Login!</button>

    <p class="signup-link"><a href="/signup">Sign up instead</a></p>
  </div>
</form>
<script src="/js/login.js"></script>